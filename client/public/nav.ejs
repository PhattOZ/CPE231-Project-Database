<div class="w-full bg-gray-900 text-gray-300">
  <div class="px-20 lg:px-36 py-8">
    <div class="flex justify-between">
      <a href="/" class="animate-bounce">
        <img src="img/logo/logo4_edit.png" alt="" class="w-25"></a>
      <div class="flex-shrink-0">
        <a
          href="/about"
          class="px-3 transition-colors duration-100 ease-in hover:text-white"
          >About us</a
        >
      </div>
      <div class="">
        <% if(locals.username){ %>
        <a
          href="/userinfo"
          class="px-3 transition-colors duration-100 ease-in hover:text-white"
          ><%= username %></a
        >
        <a
          href="/logout"
          class="px-3 transition-colors duration-100 ease-in hover:text-white"
          >Log out</a
        >
        <% } else{ %>
        <a
          href="/login"
          class=" transition-colors duration-100 ease-in hover:text-white"
          >Log in</a
        >
        <% } %>
      </div>
    </div>
  </div>
</div>
